/* archive */
.archive {
  .post-block {
    .collection-year {
      margin-top: 0.8rem;
      margin-bottom: 0;

      &:before {
        background-color: $grey-dark;
      }
    }

    .post-header {
      margin-top: 1em;
    }
    .post-content {
      // margin-bottom: 0;
    }
  }
}

.post-block {
  line-height: 1.5;
  
  +mobile() {
    padding: 1rem;
  }  
}

.post-body {
    h1 {
      border-top: 1px solid $grey;
      padding: 10px 0px;
      background: $lightgrey;
      text-align: center;
    }
    h1, h2 {
      border-bottom: 1px solid $grey;
    }
    .image-caption {
        margin: -10px auto 15px;
    }

    img {
        max-height: 100%;

        &[src*="#hwrap"] {
          width: 100%;
          max-height: 300px;
        }

        &[src*="#compact"] {
          max-height: 200px;
        }
    }

    *:not(pre) > code {
        font-family: 'Noto Sans KR';
    }

    code {
      color: $red;
      background-color: $white;
      border: 1px solid $grey;
      padding: 2px 6px;
    }
    
    a {
        color: $green;
        border-bottom: 0;
        &:hover {
            text-decoration: underline;
        }
        
        code {
            color: $green;
        }
    }
}

.comments {
    border-top: 1px solid $grey;
    padding: 20px;
}
