// Variables of Snorlax scheme
// ==================================================

$snorlax-outer-skin        = hsl(196, 55%, 36%);
$snorlax-skin              = hsl(30, 71%, 93%);
$snorlax-tongue            = hsl(349, 69%, 54%);
$snorlax-teeth             = hsl(0, 0%, 97%);
$snorlax-sole-of-foot      = hsl(27, 13%, 44%);
$snorlax-toenail           = hsl(0, 0%, 96%);
$snorlax-beam              = hsl(45, 78%, 61%);

$red = #d63200;
$green = #42b983;
$white = rgb(255, 255, 255);
$grey = #efefed;
$lightgrey = #f8f8f8;

$link-decoration-color = $snorlax-sole-of-foot;

$headband-color = transparent;
$brand-bg-color = $white;
$brand-color = $black-deep;
$brand-hover-color = $black-deep;

if (hexo-config('darkmode')) {
    $body-bg-color = $body-bg-color-dark;
    $border-color = $grey-dim;

    $text-color = $grey-light;
    $link-color = $grey-lighter;
    $link-hover-color = $black-light;
    $link-decoration-color = $black-light;

    $brand-bg-color = $body-bg-color;
    $brand-color = $text-color;
    $brand-hover-color = $grey-light;

    $highlight-background = $black-dim;
    $highlight-foreground = $text-color;

    $blockquote-color = $text-color;
}